<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/" style="color:white; font-size: 25px;">QuizBase</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            {{#if session.loggedIn}}
            <a class="nav-link" href="/logout">Logout</a>
            {{else}}
            <a class="nav-link" href="/login">Login</a>
            <a class="nav-link" href="/signup">Sign up</a>
            {{/if}}
        </div>
    </div>
</nav>
<div id="highscoresPg">
    <div class="jumbotron jumbotron-fluid pt-4 mb-0">
        <div class="container">
            <h1 class="display-4 text-center highscoresTitle">{{highscores.0.Quiz.quiz_name}} Highscores</h1>
            <p id="highscore-message" class="lead text-center">Try to see if you can top the scores list.</p>

            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-center" scope="col">Place</th>
                        <th class="text-center" scope="col">Player</th>
                        <th class="text-center" scope="col">Score</th>
                    </tr>
                </thead>
                <tbody id="scoresList">
                    {{#each highscores}}
                    <tr>
                        <td class="text-center">{{inc @index}}</td>
                        <td class="text-center">{{this.User.username}}</td>
                        <td class="text-center">{{this.score}}</th>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            <button class="btn btn-info btn-lg btn-block" id="clearBtn" style="margin-top: 50px" role="button">Clear
                Highscores</button>
        </div>
    </div>
</div>