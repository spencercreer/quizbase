    <a class="navbar-brand" href="/" style="color:white; font-size: 25px;">QuizBase</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-link" href="/login">Login</a>
            <a class="nav-link" href="/logout">Logout</a>
        </div>
    </div>
</nav>
<section>

    <div class="jumbotron pt-2 mb-0">
        <h1 class="display-4 text-center my-4">{{questions.0.Quiz.quiz_name}} Quiz Questions</h1>
        <div id="quiz-id" style="display: none;">{{questions.0.Quiz.id}}</div>

        <!-- Button trigger modal -->
        <button id="add-modal-btn" type="button" class="btn btn-block btn-info" data-toggle="modal"
            data-target="#staticBackdrop" data-id="{{questions.0.Quiz.id}}">Add Question</button>

        {{#each questions}}
        <div class="card my-1">
            <div class="card-body pb-1 mx-1">
                <div style="display: flex; justify-content: left;">
                    <a class="delete-button px-1 mx-1" data-id={{id}} data-toggle="modal" data-target="#deleteQuestionModal"                      style="text-align: center; background-color: red; color: white; height: 30px; width: 30px; border-radius: 5px; border-style: none; font-weight: bold; font-size: 18px;">X</a>
                    <button class="edit-button fas fa-edit p-1" data-id={{id}} data-toggle="modal"
                        data-target="#staticBackdrop"
                        style="height: 30px; width: 30px; color:white; background-color: #18A2B8; border-radius: 5px; border-style: none;"></button>
                    <h4 class="px-1" style="display: block;">{{question}}</h4>
                </div>
                <ul>
                    <li>Answer: <span>{{answer}}</span></li>
                    <li>{{choice_a}}</li>
                    <li>{{choice_b}}</li>
                    <li>{{choice_c}}</li>
                </ul>
            </div>
        </div>
        {{/each}}
    </div>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="question-modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="mb-4">
                        <div class="row">
                            <div class="col mb-2">
                                <label for="question" class="form-label">Question</label>
                                <input type="text" name="question" class="form-control" id="question">
                            </div>
                            <div class="col mb-2">
                                <label for="answer" class="form-label">Answer</label>
                                <input type="text" name="answer" class="form-control" id="answer">
                            </div>
                        </div>
                        <label class="form-label">Multiple Choices</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">1:</div>
                            </div>
                            <input type="text" name="choice_a" class="form-control" id="choice_a">
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">2:</div>
                            </div>
                            <input type="text" name="choice_b" class="form-control" id="choice_b">
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">3:</div>
                            </div>
                            <input type="text" name="choice_c" class="form-control" id="choice_c">
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-info" id="modal-button"></button>
                </div>
            </div>
        </div>
    </div>

  <!-- Delete Question Modal -->
  <div class="modal fade" id="deleteQuestionModal" tabindex="-1" aria-labelledby="deleteQuestionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteQuestionModalLabel">Delete Question<span id="delete-modal-title">Delete Question</span></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">Are you sure you want to delete this question?</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-info" id="delete-modal-button">Delete Question</button>
        </div>
      </div>
    </div>
  </div>
</section>
