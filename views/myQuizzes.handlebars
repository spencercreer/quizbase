<link rel="stylesheet" href="/css/style.css" crossorigin="anonymous">

<div>
  <div class="jumbotron pt-2 mb-0">
    <h1 class="display-4 text-center">{{user.username}}'s QuizBase</h1>
    <hr class="my-4">
    <div class="container-fluid quiz-cards">
      {{#each quizzes}}
      <div class="card-container">
        <div class="card card-front">
          <img src={{image_link}} />
        </div>
        <div class="card card-back text-light">
          <div class="card-body bg-secondary">
            <div class="row" style="display:flex; justify-content: space-between">
              <h1 class="text-center ml-3">{{quiz_name}}</h1>
              <a class="delete-button mt-2" data-id={{id}} data-toggle="modal" data-target="#deleteQuizModal">X</a>
            </div>
            <div class="quiz-btns btn-group-vertical">
              <a class="btn btn-info btn-block" href="/quiz/{{id}}">Take Quiz</a>
              <a class="btn btn-info btn-block" href="/questions/flashcards/{{id}}">Flashcards</a>
              <a class="btn btn-info btn-block" href="/highscores/{{id}}">View Highscores</a>
            </div>
              <div class="btn-group quiz-btns mt-2" role="group">
                <a class="btn btn-info" href="/questions/{{id}}">Edit Quiz</a>
              </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  <!-- Add Quiz Modal -->
  <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="quiz-modal-title">Create a Quiz</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="mb-4" id="add-quiz-form">
            <div class="row">
              <div class="col mb-2">
                <label for="quiz-name" class="form-label">Quiz Name</label>
                <input type="text" name="quiz-name" class="form-control" id="quiz-name">
              </div>
            </div>
            <h5>Add Questions</h5>
            <div class='question-form'>
              <div class="row">
                <div class="col mb-2">
                  <label for="question" class="form-label">Question</label>
                  <input type="text" name="question" class="form-control" id="question">
                </div>
                <div class="col mb-2">
                  <label for="answer" class="form-label">Answer</label>
                  <input type="text" name="answer" class="form-control" id="answer">
                </div>
              </div>
              <label class="form-label">Multiple Choices</label>
              <div class="input-group mb-2">
                <div class="input-group-prepend">
                  <div class="input-group-text">1:</div>
                </div>
                <input type="text" name="choice_a" class="form-control" id="choice_a">
              </div>
              <div class="input-group mb-2">
                <div class="input-group-prepend">
                  <div class="input-group-text">2:</div>
                </div>
                <input type="text" name="choice_b" class="form-control" id="choice_b">
              </div>
              <div class="input-group mb-2">
                <div class="input-group-prepend">
                  <div class="input-group-text">3:</div>
                </div>
                <input type="text" name="choice_c" class="form-control" id="choice_c">
              </div>
            </div>
          </form>

          <button id="add-quiz-questions" class="btn btn-info">+</button>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-info" id="modal-button">Add Quiz</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Delete Quiz Modal -->
  <div class="modal fade" id="deleteQuizModal" tabindex="-1" aria-labelledby="deleteQuizModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteQuizModalLabel">Delete <span id="delete-modal-title"></span> Quiz</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">Are you sure you want to delete this quiz? All corresponding questions and highscores
          will be deleted.</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-info" id="delete-modal-button">Delete Quiz</button>
        </div>
      </div>
    </div>
  </div>
</div>